[user]
	name = Andrew Nagi
	email = andrew.nagi@gmail.com
[alias]
	amend = commit --amend
	aa = add --all
	b = branch
	ci = commit -v
	co = checkout
	dc = diff --cached
	di = diff
	l = "!source ~/.githelpers && pretty_git_log"
	la = !git l --all
	pom = push origin master
	phm = push heroku master
[color]
	ui = true
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim
	autocrlf = input
[merge]
	tool = meld
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[github]
	user = nagi
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
