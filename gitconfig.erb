[user]
	name = Andrew Nagi
	email = andrew.nagi@gmail.com
[alias]
	aa = add --all
	amend = commit --amend
	b = branch
	ba = branch -a
	ci = commit -v
	co = checkout
	dc = diff --cached
	di = diff
	l = "!source ~/.githelpers && pretty_git_log"
	la = !git l --all
	pom = push origin master
	phm = push heroku master
	r = remote
	rv = remote -v 
	rm="!git ls-files --deleted | xargs git rm"
	st = status
[color]
	ui = true
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim
	autocrlf = input
[merge]
	tool = meld
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[github]
	user = nagi
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
