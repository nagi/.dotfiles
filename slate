# Config for slate. Good example config here: https://raw.github.com/pnkfelix/DotFiles/master/slate
config defaultToCurrentScreen true

# App swtiching
bind c:ctrl;alt;cmd focus 'Google Chrome'
bind f:ctrl;alt;cmd focus 'Firefox'
bind s:ctrl;alt;cmd focus 'Safari'
bind t:ctrl;alt;cmd focus 'iTerm'
bind v:ctrl;alt;cmd focus 'MacVim'
bind i:ctrl;alt;cmd focus 'IntelliJ IDEA'
bind x:ctrl;alt;cmd focus 'Xcode'
bind s:ctrl;alt;cmd focus 'iOS Simulator'
bind r:ctrl;alt;cmd focus 'RubyMine'

# Push Bindings - Windows esq spilt
bind right:ctrl;alt;cmd push right bar-resize:screenSizeX/2
bind left:ctrl;alt;cmd push left bar-resize:screenSizeX/2
# Maximize
bind up:ctrl;alt;cmd corner top-left resize:screenSizeX;screenSizeY
#TODO How to minimize?
bind down:ctrl;alt;cmd corner top-left resize:screenSizeX;screenSizeY

# Throw Bindings - moves to another screen
bind w:ctrl;alt;cmd throw 0 resize
bind e:ctrl;alt;cmd throw 1 resize
bind r:ctrl;alt;cmd throw 2 resize

## # Window Hints
bind h:ctrl;alt;cmd hint asdfghjkl

config windowHintsIgnoreHiddenWindows false
config windowHintsShowIcons true
config windowHintsFontSize  100
config windowHintsSpread true
config windowHintsSpreadSearchWidth 150
config windowHintsSpreadSearchHeight 150
config windowHintsFontColor 20;255;55;1.0

bind f11:ctrl
bind g:shift;ctrl;alt;cmd  grid padding:5 0:5,2 1:5,4
